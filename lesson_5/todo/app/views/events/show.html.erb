<p id="notice"><%= notice %></p>

<p> <strong> Name: <%= @event.name %> </strong> </p>

<p> <strong> Content: <%= @event.content %> </strong> </p>

<p> <strong> Done: <%= @event.done %> </strong> </p>

<p>
	<strong>Items: </strong>
	<table>
		<% @event.items.order(:created_at).each_with_index do |item, i| %>
			   <tr> 

			     <td> <%= i + 1 %> </td>
			     <td> <%= item.name %> </td>

			   </tr>
			<% end %>
	</table>
</p>


<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
